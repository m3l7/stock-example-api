{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "typeRoots": ["./typings/modules", "./typings/globals"],
        "lib": ["es6", "dom"],
        "types": ["reflect-metadata"],
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "./src"
    },
    "include":[
        "src/**/*"
    ]
}
